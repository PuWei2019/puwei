<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <!--namespace属性：指定当前文件和哪个接口经行映射，指定完整路径文件路径结构 -->
<mapper namespace="com.cy.store.mapper.UserMapper">

    <!--resultMap标签：自定义映射规则
        id属性:resultMap唯一名字,和SQL语句中resultMap属性一致
        type属性:表示一个类,表示表查询结果和哪个JAVA实体类经行映射
    -->
    <resultMap id="UserEntityMap" type="com.cy.store.entity.User">
        <!--名称不一致的字段匹配指定 一致可以不写 -->
        <!--result标签经行匹配 column:表字段 property:java实体类 例:表t_user.is_delete java实体类:user.isDelete -->
        <!--主键用id 其他用result 完整版需要写id 表示主键 -->
        <id column="uid" property="uid"/>
        <result column="is_delete" property="isDelete"></result>
        <result column="created_user" property="createdUser"></result>
        <result column="created_time" property="createdTime"></result>
        <result column="modified_user" property="modifiedUser"></result>
        <result column="modified_time" property="modifiedTime"></result>
    </resultMap>



        <!--配置接口方法对应SQL语句需要添加标签,select,insert,update,delete和SQL语句增删改查一致 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="uid">
        <!--id为方法的名称 在标签内部编写SQL语句-->
        <!-- useGeneratedKeys:开启某个字段自增(主键自增);keyProperty表示将表中哪个字段作为主键经行递增  -->

        INSERT INTO t_user (
        username, password, salt, phone, email, gender, avatar,
        is_delete, created_user, created_time, modified_user, modified_time
        ) VALUES (
        #{username}, #{password}, #{salt}, #{phone}, #{email}, #{gender}, #{avatar},
        #{isDelete}, #{createdUser}, #{createdTime}, #{modifiedUser}, #{modifiedTime}
        )
    </insert>

    <!--select语句执行的时候,查询的结果是一个对象或者多个对象
    ResultType:表示查询结果类型，并且包含完成完整接口(表的字段和类的对象需要保持一致.例:t_user.is_delete 类User.isDelete不一直)
    表的字段和类的对象需要保持不一致时候用通过resultMap映射匹配(第8行)
    -->
    <select id="findByUsername" resultMap="UserEntityMap">
        SELECT * from t_user WHERE username=#{username}
    </select>
    <!--通过uid修改密码-->
    <update id="updatePasswordByUid">
        UPDATE t_user SET
        password=#{password},
        modified_user=#{modifiedUser},
        modified_time=#{modifiedTime}
        WHERE uid=#{uid}
    </update>
    <!--通过uid查找用户-->
    <select id="findByUid" resultMap="UserEntityMap">
        SELECT * from t_user WHERE uid=#{uid}
    </select>

    <update id="updateInfoByUid">
        <!--if表示判断条件 test接受一个boolean类型的条件
        如果为true 执行标签内部的语句-->
        UPDATE t_user SET
        <if test="phone!=null">phone=#{phone},</if>
        <if test="email!=null">email=#{email},</if>
        <if test="gender!=null">gender=#{gender},</if>
        modified_user=#{modifiedUser},
        modified_time=#{modifiedTime}
        WHERE uid = #{uid}
    </update>


    <update id="updateAvatarByUid">
        UPDATE t_user
        SET
            avatar=#{avatar},
            modified_user=#{modifiedUser},
            modified_time=#{modifiedTime}
        WHERE
            uid=#{uid}
    </update>
</mapper>